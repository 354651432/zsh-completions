#compdef file
_arguments	-s \
    --help'[display this help and exit]' \
    --apple"[output the Apple CREATOR/TYPE]" \
    --extension'[output a slash-separated list of extensions]' \
    --mime-type'[output the MIME type]' \
    --mime-encoding'[output the MIME encoding]' \
    {-v,--version}'[output version information and exit]' \
    {-z,--uncompress}'[try to look inside compressed files]' \
    {-b,--brief}'[do not prepend filenames to output lines]' \
    {-e,--exclude}"[exclude TEST from the list of test to be performed for file. Valid tests are: apptype, ascii, cdf, compress, csv, elf,encoding, soft, tar,{ json,text, tokens]" \
    {-l,--list}'[list magic strength]' \
    {-L,--dereference}'[follow symlinks]' \
    {-0,--print0}'[terminate filenames with ASCII NUL]' \
    {-P,--parameter}'[set file engine parameter limits indir :15 recursion limit for indirection name :30 use limit for name/use magic elf_notes : 256 max ELF{ notes rocessed elf_phnum   128 max ELF prog sections processed elf_shnum 32768 max ELF sections processed]' \
    {-r,--raw}'[don`t translate unprintable chars to \ooo]' \
    {-C,--compile}'[compile file specified by -m]' \
    {-d,--debug}'[print debugging messages]' \
    {-F,--separator}"[use string as separator instead of \`:']" \
    {-Z,--uncompress-noreport}"[only print the contents of compressed files]" \
    {-c,--checking-printout}"[print the parsed form of the magic file, use in conjunction with -m to debug a new magic file before installing it]" \
    {-f,--files-from}"[read the filenames to be examined from FILE]" \
    {-k,--keep-going}"[don't stop at the first match]" \
    {-h,--no-dereference}"[don't follow symlinks (default)]" \
    {-n,--no-buffer}"[do not buffer output]" \
    {-N,--no-pad}"[do not pad output]" \
    {-s,--special-files}"[treat special (block/char devices) files as ordinary ones]" \
    {-p,--preserve-date}"[preserve access times on files]" \
    {-m,--magic-file}"[use LIST as a colon-separated list of magic number files]" \
    {-S,--no-sandbox}"[disable system call sandboxing]" \
    '*:file:_files'
